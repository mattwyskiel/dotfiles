{
    "$schema": "https://opencode.ai/config.json",
    "theme": "system",
    "model": "github-copilot/claude-opus-4.5",
    "autoshare": false,
    "autoupdate": true,
    "mcp": {
        "context7": {
            "type": "remote",
            "url": "https://mcp.context7.com/mcp",
            "enabled": true
        },
        "aws": {
            "type": "local",
            "command": [
                "uvx",
                "mcp-proxy-for-aws@latest",
                "https://aws-mcp.us-east-1.api.aws/mcp"
            ],
            "enabled": true
        },
        "pulumi": {
            "type": "local",
            "command": [
                "bunx",
                "@pulumi/mcp-server@latest",
                "stdio"
            ],
            "enabled": true
        }
    },
    "tools": {
        "aws*": false,
        "pulumi*": false
    }
}
