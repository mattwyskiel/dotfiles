{
    "$schema": "https://opencode.ai/config.json",
    "theme": "system",
    "model": "openrouter/anthropic/claude-4-sonnet-20250522",
    "autoshare": false,
    "autoupdate": true,
    "mcp": {
        "aws_core": {
            "type": "local",
            "command": [
                "uvx",
                "awslabs.core-mcp-server@latest"
            ],
            "environment": {
                "FASTMCP_LOG_LEVEL": "ERROR"
            },
            "enabled": true
        },
        "aws_api": {
            "type": "local",
            "command": [
                "uvx",
                "awslabs.aws-api-mcp-server@latest"
            ],
            "environment": {
                "AWS_REGION": "us-east-1"
            },
            "enabled": true
        },
        "aws_pricing": {
            "type": "local",
            "command": [
                "uvx",
                "awslabs.aws-pricing-mcp-server@latest"
            ],
            "environment": {
                "FASTMCP_LOG_LEVEL": "ERROR",
                "AWS_PROFILE": "default",
                "AWS_REGION": "us-east-1"
            },
            "enabled": true
        },
        "aws_docs": {
            "type": "local",
            "command": [
                "uvx",
                "awslabs.aws-documentation-mcp-server@latest"
            ],
            "environment": {
                "FASTMCP_LOG_LEVEL": "ERROR",
                "AWS_DOCUMENTATION_PARTITION": "aws"
            },
            "enabled": true
        },
        "aws_diagrams": {
            "type": "local",
            "command": [
                "uvx",
                "awslabs.aws-diagram-mcp-server@latest"
            ],
            "environment": {
                "FASTMCP_LOG_LEVEL": "ERROR"
            },
            "enabled": true
        },
        "aws_cost_explorer": {
            "type": "local",
            "command": [
                "uvx",
                "awslabs.cost-explorer-mcp-server@latest"
            ],
            "environment": {
                "FASTMCP_LOG_LEVEL": "ERROR",
                "AWS_PROFILE": "default"
            },
            "enabled": true
        },
        "aws_cloudwatch": {
            "type": "local",
            "command": [
                "uvx",
                "awslabs.cloudwatch-mcp-server@latest"
            ],
            "environment": {
                "FASTMCP_LOG_LEVEL": "ERROR",
                "AWS_PROFILE": "default"
            },
            "enabled": true
        },
        "pulumi": {
            "type": "local",
            "command": [
                "npx",
                "@pulumi/mcp-server@latest",
                "stdio"
            ],
            "enabled": true
        },
        "context7": {
            "type": "remote",
            "url": "https://mcp.context7.com/mcp",
            "enabled": true
        }
    }
}
